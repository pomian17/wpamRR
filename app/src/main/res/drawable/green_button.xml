<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" >
    <shape>
        <gradient
            android:startColor="@color/rrGreen_light"
            android:endColor="@color/rrGreen"
            android:angle="270" />
        <stroke
            android:width="3dp"
            android:color="@color/rrGreen" />
        <corners
            android:radius="3dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>

<item android:state_enabled="false" >
    <shape>
        <gradient
            android:startColor="@color/rrLightGray"
            android:endColor="@color/rrLightGray"
            android:angle="270" />
        <stroke
            android:width="3dp"
            android:color="@color/rrLightGray" />
        <corners
            android:radius="3dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>

<item>
    <shape>
        <gradient
            android:endColor="@color/rrGreen"
            android:startColor="@color/rrGreen_light"
            android:angle="270" />
        <stroke
            android:width="3dp"
            android:color="@color/rrGreen" />
        <corners
            android:radius="3dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</selector>